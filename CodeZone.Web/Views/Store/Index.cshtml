@model IEnumerable<StoreViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-center mb-4">
        <h3 class="text-center">Stores List</h3> <!-- العنوان في المنتصف -->
    </div>

    <table class="table table-striped table-bordered text-center" width="100%">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td> <!-- عرض اسم المتجر -->
                    <td>
                        <!-- Edit Button -->
                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-controller="Store" asp-route-id="@item.Id">Edit</a>

                        <!-- Delete Button -->
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Store" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Add New Store Button and Total Stores -->
    <div class="d-flex justify-content-between align-items-center mt-3">
        <a class="btn btn-success" asp-action="Create" asp-controller="Store" style="width: 150px;">Add New Store</a>
        <h5 class="text-muted mb-0">Total Stores: @ViewBag.TotalStores</h5> <!-- إجمالي عدد المتاجر بجانب الزر -->
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-4">
            <!-- Previous Button -->
            <li class="page-item @(ViewBag.Page <= 1 ? "disabled" : "")">
                <a class="page-link" href="?page=@(ViewBag.Page - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }

            <!-- Next Button -->
            <li class="page-item @(ViewBag.Page >= ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?page=@(ViewBag.Page + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
