@model ItemViewModel

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; flex-direction: column;">
    <form asp-action="Create" method="post" style="max-width: 600px; width: 100%;">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="Name" class="form-label" style="font-size: 1.2rem;">Item Name</label>
            <input asp-for="Name" class="form-control form-control-lg" style="max-width: 100%;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-success btn-lg" style="width: 48%;">Confirm to Add</button>
            <a asp-action="Index" asp-controller="Item" class="btn btn-primary btn-lg" style="width: 48%;">Back To Index</a>
        </div>
    </form>
</div>

<!-- ClientSide Validation -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
